                </article>
            </section>

            <div class="titulo">
                <h5>LO MAS VENDIDO</h5>
            </div>
            <hr class="hr1">


            <section class="section-vendido">
                <% products.forEach(product => { %>
                <article class="producto">
                    <div class="caja">
                        <a href="/products/detail/<%- product.id %>"><img src="/img/imagenes home/<%- product.image %>" alt=""></a>
                    </div>
                <div class="container-product-index">         
                <a href="/products/detail/<%- product.id %>" class="product-name"><%- product.name %></a>
                <div class="pri-dis">
                    <h4>$<%- toThousand(product.price - product.price * product.discount / 100) %></h4>
                    <span class="discount"><%- product.discount > 0 ? `${product.discount}$ OFF` : " " %></span>
                </div>
                </div>
                </article>
                <% }) %>
            </section>

            <div class="boton-productos">
                <a href="">
