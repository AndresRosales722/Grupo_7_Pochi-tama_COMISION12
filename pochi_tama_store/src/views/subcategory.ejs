<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header.ejs') %>
    <main class="categories">
        <div class="cat_banner container-fluid">
            <img src="/img/banner_categorias/<%= category.banner %>" alt="Portada de categoria <%= category.name %> ">
        </div>


        <div class="subcategories_menu-mobile">
            <div id="mySidepanel" class="sidepanel">
                <div class="boton-close">
                    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                </div>
                <% subcategories.forEach(subcategory => { %>
                    <a href="/products/subcategory/<%- subcategory.id %>/<%- category.id %>"><%- subcategory.name %></a>
                <% }) %>    
            </div>
              
            <button class="openbtn" onclick="openNav()">Subcategorias</button>
        </div>
        <div class="container products-container">

            <div class="cont-title-sub">
                <ul class="atajos">
                    <li><a href="/" class="inicio">Inicio</a></li>
                    <li>/</li>
                    <li><a href=""><%= category.name %></a></li>
                </ul>
                <div class="container-como">
                    <h1><%= category.name %></h1>
                </div>
            </div>

            <aside class="subcategories_menu-desktop">
                <% subcategories.forEach(subcategory => { %>
                    <a href="/products/subcategory/<%- subcategory.id %>/<%- category.id %>"><%- subcategory.name %></a>
                <% }) %>   
            </aside>
            
            <div id="mySidepanel" class="sidePanel2">
                <% subcategories.forEach(subcategory => { %>
                    <a href="/products/subcategory/<%- subcategory.id %>/<%- category.id %>"><%- subcategory.name %></a>
                <% }) %>    
            </div>

            <%- include('./partials/cardProduct.ejs') %>

        </div>
    </main>

    <button class="ancla" id="button-up"><i class="far fa-angle-up"></i></button>

    
    <%- include('./partials/infoEnvios.ejs') %>
    <%- include('./partials/footer.ejs')%>
    <script src="/js/categoriesSidePanel.js"></script>
</body>
</html>