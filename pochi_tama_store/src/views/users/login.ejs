<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs')  %> 
    
<body class="register">

    <%- include('../partials/header.ejs')  %>

    <div class="login">
        <div class="form-container">
            <h2>Iniciar Sesion</h2>
            <form id="form" action="/users/login" method="POST">
                <div class="form">

                    <div class="input-container">
                        <label for="email" class="control-label">Email</label>
                        <input id="email" class="input-style" type="email" name="email" placeholder="Ej: juanperez@gmail.com">
                        <span id="emailErrors" class="error"></span>
                        <% if (locals.errors && errors.email) { %>
                        <small class="error-message"><%= errors.email.msg %></small>
                        <% } %>
                    </div>  
                    <div class="input-container">
                        <label for="pass" class="control-label">Contraseña</label>
                        <input id="pass" class="input-style" type="password" name="pass" placeholder="Ingrese su contraseña">
                        <span id="passErrors" class="error"></span>
                        <% if (locals.errors && errors.pass) { %>
                            <small class="error-message"><%= errors.pass.msg %></small>
                            <% } %>
                    </div>
                    <div class="olvidaste">
                        <div class="check">
                            <input type="checkbox" name="remember" id="remember">
                            <label for="remember">Recordarme</label>
                        </div>
                        <div class="re-password">
                            <span><a href="">¿Olvidaste tu contraseña?</a></span>
                        </div>
                    </div>
                    <div class="button-container">
                        <% if (locals.errors && errors.custom) { %>
                            <small class="error-message"><%= errors.custom.msg %></small>
                            <% } %>
                            <span id="submitErrors" class="error"></span>
                        <button type="submit" class="btn btn-submit">Iniciar sesión</button>
                    </div>
                    
                    <!-- <div class="button-container">
                        <button type="submit" class="btn btn-submit facebook"><i class="fab fa-facebook-square"></i><a href="">Continuar con Facebook</a></button>
                    </div>
                    
                    <div class="button-container">
                        <button type="submit" class="btn btn-submit google"><i class="fab fa-google-plus-square"></i><a href="">Continuar con Google</a></button>
                    </div> -->
                    
                    <div class="not-account">
                        <span>¿No tenés cuenta aún?</span><br>
                        <span><a href="/users/register">Crear Cuenta</a></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <script src="/js/login.js"></script>
    <%- include('../partials/footer.ejs') %>

</body>
</html>