<header>
    <div class="main-header">
        <div class="logo">
            <a href="/">
                <img src="/img/pochita.svg" alt="">
            </a>
        </div>

        <i class="fas fa-bars burguer-menu-icon" onclick="dropMenu()"></i>

        <!-- Menú de navegación mobile -->
        <nav class="navigation-bar" id="navigation-bar-mobile">

            <div class="user-icons-mobile">
                <i class="fas fa-user"></i>
                <i class="fas fa-shopping-cart"></i>
            </div>


            <!-- Lista con los elementos del menú (categorías) -->
            <ul class="menu">
                <div class="user">
                    <% if (typeof session.user != "undefined") { %>
                    <i class="fas fa-user"></i><span class="session"></span>
                    <div class="menu-user">
                        <a href="/users/profile">Mis datos</a>
                        <a href="/users/logout">Cerrar sesión</a>
                        <% if (session.user.rol === "ROL_ADMIN") { %>
                        <a href="/admin/index">ADMIN</a>
                        <% } %>
                    </div>
                    <% } else {%>
                    <a href="/users/login"><i class="fas fa-user"></i></a>
                    <% } %>
                </div>
                <li class="dropdown-menu" onclick="dropSubCategoryMenu(`colec`)">
                    COLECCIONABLES
                    <i class="fas fa-chevron-down"></i>
                </li>
                <li class="dropdown-menu" onclick="dropSubCategoryMenu(`tazas`)">
                    TAZAS
                    <i class="fas fa-chevron-down"></i>
                </li>
                <li class="dropdown-menu" onclick="dropSubCategoryMenu(`lamparas`)">
                    LAMPARAS
                    <i class="fas fa-chevron-down"></i>
                </li>
                <li class="dropdown-menu" onclick="dropSubCategoryMenu(`peluches`)">
                    PELUCHES
                    <i class="fas fa-chevron-down"></i>
                </li>
                <li><a href="">Contacto</a></li>
            </ul>
        </nav>


        <!-- Icono del buscador en header mobile -->
        <div class="search-icon" onclick="dropSearch()">
            <i class="fas fa-search"></i>
        </div>

        <!-- Buscador escritorio -->

        <form action="/products/search" method="GET" class="search-form-desktop">
            <div class="search-bar">
                <input type="search" name="keywords" placeholder="¿Que estas buscando?">
                <button type="submit"><i class="fas fa-search"></i></button>
            </div>
        </form>

        <!-- Iconos de usuario escritorio -->
        <div class="user-icons-desktop">
            <div class="user">
                <% if (typeof session.user != "undefined") { %>
                <i class="fas fa-user"><span>Cuenta</span></i><span class="session"></span>
                <div class="menu-user">
                    <a href="/users/profile">Mis datos</a>
                    <a href="/users/logout">Cerrar sesión</a>
                    <% if (session.user.rol === "ROL_ADMIN") { %>
                    <a href="/admin/index">ADMIN</a>
                    <% } %>
                </div>
                <% } else {%>
                <a href="/users/login"><i class="fas fa-user"><span>Cuenta</span></i></a>
                <% } %>
            </div>

            <a href="/"><i class="fas fa-shopping-cart"><span>Carrito</span></i></a>

            <a href="/"><i class="fas fa-envelope"><span>Contacto</span></i></a>

        </div>

    </div>
    <!-- Menú de navegación desktop -->
    <nav class="navigation-bar" id="navigation-bar-desktop">

        <!-- Lista con los elementos del menú (categorías) -->
        <ul class="menu">
            <li class="dropdown-menu" onclick="dropSubCategoryMenu(`colec`)">
                COLECCIONABLES
                <i class="fas fa-chevron-down"></i>
            </li>
            <li class="dropdown-menu" onclick="dropSubCategoryMenu(`tazas`)">
                TAZAS
                <i class="fas fa-chevron-down"></i>
            </li>
            <li class="dropdown-menu" onclick="dropSubCategoryMenu(`lamparas`)">
                LAMPARAS
                <i class="fas fa-chevron-down"></i>
            </li>
            <li class="dropdown-menu" onclick="dropSubCategoryMenu(`peluches`)">
                PELUCHES
                <i class="fas fa-chevron-down"></i>
            </li>
            <li><a href="">Contacto</a></li>
        </ul>
    </nav>
    <nav class="nav_menu">

        <!-- Buscador Mobile -->

        <form action="/products/search" method="GET" class="search-form-mobile" id="search">
            <div class="search-bar">
                <input type="search" name="keywords" placeholder="¿Que estas buscando?">
                <button type="submit"><i class="fas fa-search"></i></button>
            </div>
        </form>

        <!-- Subcategorias desplegables -->

        <div class="subcategory_menu" id="colec">
            <div class="subcategory_header">
                <h3><a href="">COLECCIONABLES</a></h3>
                <img src="/img/iconos/close.png" alt="" onclick="closeWindow()">
            </div>
            <ul>
                <li><a href="">Subcategoria</a></li>
                <li><a href="">Subcategoria</a></li>
                <li><a href="">Subcategoria</a></li>
            </ul>
        </div>

        <div class="subcategory_menu" id="tazas">
            <div class="subcategory_header">
                <h3><a href="">TAZAS</a></h3>
                <img src="/img/iconos/close.png" alt="" onclick="closeWindow()">
            </div>
            <ul>
                <li><a href="">Subcategoria</a></li>
                <li><a href="">Subcategoria</a></li>
                <li><a href="">Subcategoria</a></li>
            </ul>
        </div>

        <div class="subcategory_menu" id="lamparas">
            <div class="subcategory_header">
                <h3><a href="">LAMPARAS</a></h3>
                <img src="/img/iconos/close.png" alt="" onclick="closeWindow()">
            </div>
            <ul>
                <li><a href="">Subcategoria</a></li>
                <li><a href="">Subcategoria</a></li>
                <li><a href="">Subcategoria</a></li>
            </ul>
        </div>

        <div class="subcategory_menu" id="peluches">
            <div class="subcategory_header">
                <h3><a href="">PELUCHES</a></h3>
                <img src="/img/iconos/close.png" alt="" onclick="closeWindow()">
            </div>
            <ul>
                <li><a href="">Subcategoria</a></li>
                <li><a href="">Subcategoria</a></li>
                <li><a href="">Subcategoria</a></li>
            </ul>
        </div>
    </nav>
</header>

<script src="/js/header.js"></script>