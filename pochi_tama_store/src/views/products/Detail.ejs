<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs')  %>
<body class="detail">
    
    <%- include('../partials/header.ejs')  %>
    
    <div class="product">
        <div class="product-img">
            <img src="/img/imagenes home/<%- product.productImages[0].image %>" alt="">
            <span class="tag">new</span>
        </div>
        <div class="product-listing">
            <div class="content">
                <h1 class="name"><%- product.name %></h1>
                <div class="prices">
                    <p class="price">$<%- product.price %></p>
                    <p class="price">$<%- product.discount %></p>
                </div>
                <div class="btn-and-rating-box">
                    <div class="rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div>
                </div>
                <p class="info"><%- product.description %></p>
                <div class="detail-buttons">
                    <button class="btn-detail">Comprar Ahora</button>
                    <button class="btn-detail">Agregar Carrito</button>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../partials/footer.ejs')  %>
    
    
</body>
</html>
